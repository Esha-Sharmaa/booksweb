<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books Page</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      .container {
        max-width: 1000px;
        margin: 20px auto;
        padding: 0 20px;
      }

      h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
      }

      .book-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        grid-gap: 20px;
      }

      .book {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }

      .book:hover {
        transform: translateY(-5px);
      }

      .book h2 {
        margin-top: 0;
        font-size: 1.2rem;
        color: #333;
      }

      .buy-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }

      .buy-link:hover {
        background-color: #0056b3;
      }

      .author,
      .genre,
      .price {
        margin-top: 10px;
        color: #666;
      }

      .navbar {
        background-color: #007bff;
        color: #fff;
        padding: 10px 0;
      }

      .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        color: #fff;
        font-size: 24px;
        text-decoration: none;
      }

      .nav-links {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      .nav-links li {
        display: inline-block;
        margin-right: 20px;
      }

      .nav-links li a {
        color: #fff;
        text-decoration: none;
      }

      .signup-btn {
        padding: 10px 20px;
        background-color: #fff;
        color: #007bff;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      .signup-btn:hover {
        background-color: #0056b3;
        color: #fff;
      }

      @media screen and (max-width: 600px) {
        .book-list {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-container">
        <a href="#" class="logo">BookWeb</a>
        <ul class="nav-links">
          <li><a href="#">Home</a></li>
          <li><a href="#">Books</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
        </ul>
        <a href="/signup" class="signup-btn">Sign Up</a>
      </div>
    </nav>
    <div class="container">
      <h1>Book Listing</h1>
      <div class="book-list">
        <% books.forEach((book) => { %>
        <div class="book">
          <h2><%= book.title %></h2>
          <p class="author"><%= book.author %></p>
          <p class="genre"><%= book.genre %></p>
          <p class="price"><%= book.price %></p>
          <a href="#" class="buy-link">Buy Now</a>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
